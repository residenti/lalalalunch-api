<div id="edit-content">
  <section>
    <h1>ユーザー情報変更</h1>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
      <div class="tar"><%= link_to "戻る", :back %></div>
      <table border=1>
        <tr>
          <th>
            <%= f.label :userid %>
            <span class="require-label">必須</span>
          </th>
          <td>
            <div class="label">【半角英数1 ~ 20文字以内(小文字)】</div>
            <%= f.text_field :userid, autofocus: true, autocomplete: "userid" %>
          </td>
        </tr>
        <tr>
          <th>
            <%= f.label :email %>
            <span class="require-label">必須</span>
          </th>
          <td>
            <div><%= f.email_field :email, autocomplete: "email" %></div>
            <div><%= f.email_field :email_confirmation, autocomplete: "email" %><span class="p-l-5 label">確認用</span></div>
          </td>
        </tr>
        <tr>
          <th><%= f.label :password %></th>
          <td>
            <div class="label">【半角英数<%= @minimum_password_length %>文字以上(小文字)】</div>
            <div><%= f.password_field :password, autocomplete: "new-password" %></div>
            <div><%= f.password_field :password_confirmation, autocomplete: "new-password" %><span class="p-l-5 label">確認用</span></div>
            <div class="label">＊変更したくない場合は未入力にする</div>
          </td>
        </tr>
        <tr>
          <th>
            <%= f.label :current_password %>
            <span class="require-label">必須</span>
          </th>
          <td><%= f.password_field :current_password, autocomplete: "current-password" %></td>
        </tr>
      </table>
      <div class="mt-30 tac">
        <%= f.submit "更新する", class: "btn" %>
      </div>
    <% end %>
  </section>
</div>
